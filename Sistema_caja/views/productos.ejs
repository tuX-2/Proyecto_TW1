                    Todas las Categor√≠as
                </div>
                <div class="category-chip" data-category="menu">
                    <i class="fas fa-utensils"></i>
                    Men√∫ del d√≠a
                </div>
                <div class="category-chip" data-category="platillo">
                    <i class="fas fa-hamburger"></i>
                    Platillos
                </div>
                <div class="category-chip" data-category="bebida">
                    <i class="fas fa-coffee"></i>
                    Bebidas
                </div>
            </div>

            <!-- Products Grid (Horizontal Layout) -->
            <div class="products-grid" id="products-grid">
                <!-- Los productos se generan din√°micamente -->
            </div>
        </div>

        <!-- Bottom Navigation -->
        <nav class="bottom-nav">
            <a href="/" style="text-decoration: none;">
                <button class="nav-btn">
                    <i class="fas fa-home"></i>
                    <span>Inicio</span>
                </button>
            </a>
            <a href="#" style="text-decoration: none;">
                <button class="nav-btn">
                    <i class="fas fa-box"></i>
                    <span>Productos</span>
                </button>
            </a>
            <a href="/corte" style="text-decoration: none;">
                <button class="nav-btn">
                    <i class="fas fa-cash-register"></i>
                    <span>Corte de caja</span>
                </button>
            </a>
            <a href="/notificaciones" style="text-decoration: none;">
                <button class="nav-btn">
                    <i class="fas fa-bell"></i>
                    <span>Notificaciones</span>
                    <div class="notification-dot"></div>
                </button>
            </a>
        </nav>
    </div>

    <script src="/javascripts/script_products.js"></script>
</body>

</html>
